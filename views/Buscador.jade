extends barraFlat.jade
block barraFlat

			// Identificador
			.row(style='color: #065B86; margin-top: 5%; margin-bottom:8%;')
				img.img-responsive(src='img/canaima.png', style='width: 20%; margin-left: 40%; ')
				h4(align='center', style='margin-top: 3%;  margin-bottom: -3%;') Resultados para:  " #{texto}  "
			
			// Tabla de productos publicados
			.row
				// separador
				.col-md-1  
				.col-md-10
					.row
						.col-md-12

							if(enc)
								.table-responsive(align='center')
									table.table.table-condensed.table-hover
										thead(style='background: #FFFFFF;  color:  #08292F; border-radius: 200px;')
										tr
											th(style='text-align: center;') Nombre
											th(style='text-align: center;') Grado
											th(style='text-align: center;') Seccion
											th(style='text-align: center;') Codigo de canaima
											th(style='text-align: center;') condicion general
											th(style='text-align: center;') 


											//color: #11CDB9;

										each registro in registros
											tbody(style='background: white; color: #777777; margin-top: 1%;')
												tr
													td
														p(style='text-align: center;') #{registro.Nombre}
													td
															//if(Products.fecha) 
															p(style='text-align: center;') #{registro.Grado}
															
														//else
															p(style='text-align: center;') Sin fecha
													td
														p(style='text-align: center;') #{registro.Seccion}
													td
														p(style='text-align: center;') #{registro.codigo}
													td
														p(style='text-align: center;') #{registro.condicion}

													td
														a.Btn-T.fa.fa-eye(aria-hidden="true" style='text-align: center; font-size: 25px; '  href='/Ficha?grado=#{registro.Grado}&seccion=#{registro.Seccion}&serial=#{registro.codigo}') 					
													
						
			
			//Boton de Imrpimir
			.row(style='margin-left: 43%; width: 50%; margin-top: 10%;')
				button.btn.btn-primary(onclick='window.print();', value='Imprimir')
					| Imprimir Archivo

				//Imprimir una seccion
					<script type="text/javascript">
						function imprSelec(muestra)
						{var ficha=document.getElementById(muestra);var ventimp=window.open(' ','popimpr');ventimp.document.write(ficha.innerHTML);ventimp.document.close();ventimp.print();ventimp.close();}
					</script>
			