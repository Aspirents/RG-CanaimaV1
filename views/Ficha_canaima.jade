extends Barra.jade
block barra

	// Contenido
	section.jumbotron.text-center
		// Membrete
		.row(style='width: absolute; background: white;')
			div(style=' margin-left: 1%;')
				img.img-responsive.well(src='img/canaima.png', style='width: 200px; height: 80px;')
			div(style='margin-top: 2%; margin-left: 50%; margin-right: 2%;')
				h4 #{ Alumno }
					h3 Salon: #{grado}#{seccion}
			div(style='margin-top: 1.3%; height: 10px; width: 10px;')
				button.btn.btn(type='button', style=' border-radius: 20px;')  Editar 
		.row(style='width: absolute; background: white; margin-bottom: 5%;')
			// Columna 1
			div(style='margin-top: 2%; width: 40%; margin-left: 5%;')
				// Datos del Aula
				.row(style='margin-bottom: 2%; margin-left: 6%;margin-bottom: 5%;')
					h5 Datos del Aula
				.row(style='margin-bottom: 3%; margin-left: 6%', align='center')
					div(style='margin-left: 2%;')
						.row
							input.input-lg.form-control(type='text', style='border-radius: 20px;', placeholder= '#{Datos_Aula.NombreD}')
						p  
						.row
							input.input-lg.form-control(type='text', style='border-radius: 20px;', placeholder='#{Datos_Aula.NombreA}')
						p  
						

					div(style='margin-left: 10%;', align='center')
						.row
							input.input-lg.form-control(type='text', style='border-radius: 20px;', placeholder='Grado: #{Datos_Aula.Grado}')
						p  
						.row
							input.input-lg.form-control(type='text', style='border-radius: 20px;', placeholder='Seccion: #{Datos_Aula.Seccion}')
						p  
				.row
					input.input-lg.form-control(type='text', style='border-radius: 20px; width:85%; margin-left: 8%;', placeholder='#{Datos_Aula.Inst_P}')
				p

				button.btn.disabled.btn-success(type='button', style='margin-top: 2%; width: 90%;')  Guardar 
			// Fin columna 1
			// Columna 2
			div(style='margin-top: 2%; width: 50%; margin-left: 1%; ')
				// Datos del Equipo
				.row(style='margin-bottom: 2%; margin-left: 6%; margin-bottom: 5%;')
					h5 Datos del Equipo
				.row(style='margin-bottom: 3%; margin-left: 4%', align='center')
					div(style='margin-left: 2%; ')
						.row
							input.input-lg.form-control(type='text', style='border-radius: 20px;', placeholder='Posee Canaima: #{Datos_Equipo.PCanaima}')
						p  
						.row
							input.input-lg.form-control(type='text', style='border-radius: 20px;', placeholder='#{Datos_Equipo.Serial}')
						p  
						.row
							input.input-lg.form-control(type='text', style='border-radius: 20px;', placeholder='#{Datos_Equipo.SO} ')
						p  
					div(style='margin-left: 10%; width: 50%; ')
						.row
							input.input-lg.form-control(type='text', style='border-radius: 20px;', placeholder='Puertos USB: #{Datos_Equipo.N_usb}')
						p  
						.row
							input.input-lg.form-control(type='text', style='border-radius: 20px;', placeholder='Puertos de Red: #{Datos_Equipo.N_lan}')
						p  
						.row
							input.input-lg.form-control(type='text', style='border-radius: 20px;', placeholder='Puertos de Audio: #{Datos_Equipo.N_audio}')
						p  

					.row(style='margin-left: 0.5%; width: 94%; margin-bottom: 2%;')
						input.input-lg.form-control(type='text', style='border-radius: 20px;', placeholder='Tipo de puerto de video: #{Datos_Equipo.T_Pvideo}')

					div(style='margin-left: 0.5%; width: 94%')
						input.input-lg.form-control(type='text', style='border-radius: 20px;', placeholder='Version del SO:  #{Datos_Equipo.Version}', align='center')
			//
				Fin Columna 2>
				<!-- Condiciones del Equipo
			.row(style='margin-top: 5%; margin-bottom: 5%; margin-left:43%;')
				h5 Condiciones del Equipo
			.row(style='width: 100%; margin-left: 12%; margin-bottom: 5%;', align='center')
				.col-md-5(style='margin-left: -3%;')
					.row
						input.input-lg.form-control(type='text', style='border-radius: 20px;', placeholder='Condicion general: #{Cond.Condicion_gral}')
					p  
					.row
						input.input-lg.form-control(type='text', style='border-radius: 20px;', placeholder='Nivel de aseo: #{Cond.Nivel_aseo}')
					p 
					
					if(Cond.Teclado) 
						.row
							input.input-lg.form-control(type='text', style='border-radius: 20px;', placeholder='Teclado Operativo:  SI')
					else
						.row
							input.input-lg.form-control(type='text', style='border-radius: 20px;', placeholder='Teclado Operativo:  NO')
					p 

					if(Cond.Mouse) 
						.row
							input.input-lg.form-control(type='text', style='border-radius: 20px;', placeholder='El touchpad funciona:  SI')
					else
						.row
							input.input-lg.form-control(type='text', style='border-radius: 20px;', placeholder='El touchpad funciona:  NO')
					p  
					.row
						input.input-lg.form-control(type='text', style='border-radius: 20px;', placeholder='Estado de la pantalla:  #{Cond.Est_pantalla}')
					p  
					.row
						input.input-lg.form-control(type='text', style='border-radius: 20px;', placeholder='Estado de la bateria:  #{Cond.Est_bateria}')
					p  
					.row
						input.input-lg.form-control(type='text', style='border-radius: 20px;', placeholder='Estado de la camara:  #{Cond.Est_camara}')
					p  
					.row
						input.input-lg.form-control(type='text', style='border-radius: 20px;', placeholder='Estado de las cornetas:  #{Cond.Est_cornetas}')
					p  
					.row
						input.input-lg.form-control(type='text', style='border-radius: 20px;', placeholder='Estado de los puertos USB:  #{Cond.Est_P_USB}')
					p  
					.row
						input.input-lg.form-control(type='text', style='border-radius: 20px;', placeholder='Cantidad de puerto USB operativos:  #{Cond.USB_Op}')
					p  
					.row
						input.input-lg.form-control(type='text', style='border-radius: 20px;', placeholder='Estado del puerto VGA/HDMI:  #{Cond.Est_Pvideo}')

				.col-md-5(style='margin-left: 10%;', align='center')
					.row
						input.input-lg.form-control(type='text', style='border-radius: 20px;', placeholder='Estado del puerto de red:  #{Cond.Est_Red}')
					p  
					.row
						input.input-lg.form-control(type='text', style='border-radius: 20px;', placeholder='El WIFI esta operativo:  #{Cond.Est_Wifi}')
					p  
					.row
						input.input-lg.form-control(type='text', style='border-radius: 20px;', placeholder='El Computador realiza un ruido al encender:  #{Cond.Ruido_Enc}')
					p  
					.row
						input.input-lg.form-control(type='text', style='border-radius: 20px;', placeholder='Al tocar el respirador sientes que exhala aire caliente:  #{Cond.A_caliente}')
					p  
					.row
						input.input-lg.form-control(type='text', style='border-radius: 20px;', placeholder='El Culer logra escucharse o emite ruido:  #{Cond.R_culer}')
					p  
					.row
						input.input-lg.form-control(type='text', style='border-radius: 20px;', placeholder='Al copiar archivos el disco hace ruidos:  #{Cond.R_disc}')
					p  
					.row
						.col-md-9
							input.input-lg.form-control(type='text', style='border-radius: 20px;', placeholder='Memoria disponible:  #{Cond.Memoria_disp}')
					p  
					.row
						.col-md-9
							input.input-lg.form-control(type='text', style='border-radius: 20px;', placeholder='Tamano del Disco:  #{Cond.Tam_disc}')
					p  

					if(Cond.Cont_Canaima)
						.row
							input.input-lg.form-control(type='text', style='border-radius: 20px;', placeholder='Posee los contenidos Canaima: SI')
					else
						.row
							input.input-lg.form-control(type='text', style='border-radius: 20px;', placeholder='Posee los contenidos Canaima: NO')

					p  

					if(Cond.Libre_Office)
						.row
							input.input-lg.form-control(type='text', style='border-radius: 20px;', placeholder='Posee la suite libre office: SI')
					else
						.row
							input.input-lg.form-control(type='text', style='border-radius: 20px;', placeholder='Posee la suite libre office: NO')						
					p  

					if(Cond.Juegos)
						.row
							input.input-lg.form-control(type='text', style='border-radius: 20px;', placeholder='Posee juegos o Soft. de terceros: SI')
					else
						.row
							input.input-lg.form-control(type='text', style='border-radius: 20px;', placeholder='Posee juegos o Soft. de terceros: NO')
